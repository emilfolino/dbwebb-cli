    THEKMOM="kmom04"
    THETARGET="me/$THEKMOM"

    checkKmomDir "$THETARGET"
    validateKmom "$THEKMOM"
    pythonme
    pythonlab "$THETARGET/lab3"
    pythonmarvin2 "$THETARGET/marvin3"
}



#        javascript1) 
